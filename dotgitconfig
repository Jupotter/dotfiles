[push]
	default = simple
[color]
	ui = auto
[diff]
	tool = vimdiff
[difftool]
	prompt = false
[merge]
	tool = diffconflicts
[mergetool "diffconflicts"]
	path = $HOME/.vim/scripts/diffconflicts
	cmd = diffconflicts vim $BASE $LOCAL $REMOTE $MERGED
	trustExitCode = true
	keepBackup = false
